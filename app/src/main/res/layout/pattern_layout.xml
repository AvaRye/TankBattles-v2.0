<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/choose_pattern"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/choose_pattern" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_pattern"
        android:layout_alignStart="@id/choose_pattern"
        android:layout_alignLeft="@id/choose_pattern"
        android:layout_marginTop="30dp"
        android:src="@drawable/shape_line" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/choose_pattern"
        android:layout_alignLeft="@id/choose_pattern"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:src="@drawable/shape_line" />

    <RadioGroup
        android:id="@+id/pattern_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/up"
        android:layout_alignStart="@id/choose_pattern"
        android:layout_alignLeft="@id/choose_pattern"
        android:layout_margin="20dp">

        <RadioButton
            android:id="@+id/m_1v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:text="1V1" />

        <RadioButton
            android:id="@+id/m_2v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2V2" />

        <RadioButton
            android:id="@+id/m_3v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3V3" />

        <RadioButton
            android:id="@+id/m_4v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="4V4" />


    </RadioGroup>


    <Button
        android:id="@+id/btn_pattern_ok"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_above="@id/btn_pattern_back"
        android:layout_alignEnd="@id/btn_pattern_back"
        android:layout_alignRight="@id/btn_pattern_back"
        android:layout_marginBottom="15dp"
        android:background="@drawable/item_button"
        android:text="@string/ok"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_pattern_back"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/item_button"
        android:text="@string/back"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>
